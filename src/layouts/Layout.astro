import Instagram from "../components/Instagram.astro";

import Footer from "../components/Footer.astro";
import NewsLetterPopUp from "../components/NewsLetterPopUp.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Oplev eksklusivt snedkerarbejde hos Vahl Wood - fra unikke møbler til tilpassede indretningsprojekter. Lad vores erfarne snedker forme dine idéer til tidløse designs.">
    <!-- insæt google font 'inter' -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&family=Inter:wght@200;300;400&family=Montserrat&family=Mulish&family=Open+Sans&display=swap"
      rel="stylesheet"
    />

    <title>Vahl Wood</title>
  </head>

  <body>
    <Nav />
    <NewsLetterPopUp />
    <slot name="hero"/>

    <main>
      <slot />
      <!-- slot er alt indhold fra pages -->
      <Instagram/>

    </main>
    <Footer />


  </body>
</html>
